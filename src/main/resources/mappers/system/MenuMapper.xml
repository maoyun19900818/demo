<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.rtmap.api.mapper.MenuMapper" >
	
	<select id="selectById" parameterType="Long" resultType="com.rtmap.api.domain.Menu">
		select * from u_menu where id = #{id}
	</select>
	
	<select id="selectByHref" parameterType="String" resultType="com.rtmap.api.domain.Menu">
		select 
			*
		from 
			u_menu 
		where 
			href = #{href}
	</select>
	<select id="selectByAction" parameterType="String" resultType="com.rtmap.api.domain.Menu">
		select 
			*
		from 
			u_menu 
		where 
			action = #{action}
		and
			parent_id = 0
	</select>
	
	<select id="selectHrefByRoleId" parameterType="Long" resultType="String">
		select 
			m.href
		from 
			u_role_menu as rm , u_menu as m 
		where 
			rm.menu_id = m.id AND rm.role_id = #{role_id} AND m.del_flag != 9
	</select>
	
	
	<insert id="insert" parameterType="com.rtmap.api.domain.Menu" keyProperty="id">
		insert into u_menu
	    <trim prefix="(" suffix=")" suffixOverrides="," >
	      <if test="id != null" >
	        id,
	      </if>
	      <if test="name != null" >
	        name,
	      </if>
	      <if test="parent_id != null" >
	        parent_id,
	      </if>
	      <if test="sort != null" >
	        sort,
	      </if>
	      <if test="href != null" >
	        href,
	      </if>
	      <if test="action != null" >
	        action,
	      </if>
	      <if test="method != null" >
	        method,
	      </if>
	      <if test="type != null" >
	        type,
	      </if>
	      <if test="is_show != null" >
	        is_show,
	      </if>
	      <if test="memo != null" >
	        memo,
	      </if>
	      <if test="creator != null" >
	        creator,
	      </if>
	      <if test="del_flag != null" >
	        del_flag,
	      </if>
	      <if test="create_time != null" >
	        create_time,
	      </if>
	    </trim>
	    <trim prefix="values (" suffix=")" suffixOverrides="," >
	      <if test="id != null" >
	        #{id},
	      </if>
	      <if test="name != null" >
	        #{name},
	      </if>
	      <if test="parent_id != null" >
	        #{parent_id},
	      </if>
	      <if test="sort != null" >
	        #{sort},
	      </if>
	      <if test="href != null" >
	        #{href},
	      </if>
	      <if test="action != null" >
	        #{action},
	      </if>
	      <if test="method != null" >
	        #{method},
	      </if>
	      <if test="type != null" >
	        #{type},
	      </if>
	      <if test="is_show != null" >
	        #{is_show},
	      </if>
	      <if test="memo != null" >
	        #{memo},
	      </if>
	      <if test="creator != null" >
	        #{creator},
	      </if>
	      <if test="del_flag != null" >
	        #{del_flag},
	      </if>
	      <if test="create_time != null" >
	        #{create_time},
	      </if>
	    </trim>
	    <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">
		  SELECT LAST_INSERT_ID() AS id
		 </selectKey>
	</insert>
	
	<update id="update" parameterType="com.rtmap.api.domain.Menu">
		update u_menu
    	<set >
    		<if test="name != null" >
	        	name = #{name},
	      	</if>
    		<if test="parent_id != null" >
	        	parent_id = #{parent_id},
	      	</if>
    		<if test="sort != null" >
	        	sort = #{sort},
	      	</if>
    		<if test="href != null" >
	        	href = #{href},
	      	</if>
    		<if test="action != null" >
	        	action = #{action},
	      	</if>
    		<if test="method != null" >
	        	method = #{method},
	      	</if>
	      	<if test="type != null" >
		        #{type} = #{type},
		    </if>
    		<if test="is_show != null" >
	        	is_show = #{is_show},
	      	</if>
    		<if test="creator != null" >
	        	creator = #{creator},
	      	</if>
    		<if test="memo != null" >
	        	memo = #{memo},
	      	</if>
    		<if test="del_flag != null" >
	        	del_flag = #{del_flag},
	      	</if>
    		<if test="create_time != null" >
	        	create_time = #{create_time},
	      	</if>
		</set>
		where id = #{id}
	</update>
	
	<select id="updateBFThread">
		update u_menu set parent_id = parent_id + 1 where id = 4
	</select>
</mapper>